<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Game grid of 12 images-->
    <style name="grid_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/question_mark</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tag">close</item>
        <item name="android:clickable">true</item>
    </style>

    <!--activity_main.xml-->
    <style name="linear_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--activity_main.xml-->
    <style name="linear_hori2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--Grid of 20 images-->
    <style name="image_sq">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edit_border</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--Text at bottom of screen-->
    <style name="txtstyle_hori">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
