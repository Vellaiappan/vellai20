<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/url"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_border"
                android:padding="0dp"
                android:inputType="textWebEmailAddress"
                android:hint="@string/url_example"
                android:text="@string/url"/>

            <Button
                android:id="@+id/fetch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:text="@string/fetch"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            style="@style/linear_horizontal">

            <ImageView
                android:id="@+id/image1"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image2"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image3"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image4"
                style="@style/image_sq"/>

        </LinearLayout>

        <LinearLayout

            style="@style/linear_horizontal">

            <ImageView
                android:id="@+id/image5"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image6"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image7"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image8"
                style="@style/image_sq"/>

        </LinearLayout>

        <LinearLayout

            style="@style/linear_horizontal">

            <ImageView
                android:id="@+id/image9"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image10"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image11"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image12"
                style="@style/image_sq"/>

        </LinearLayout>
        <LinearLayout

            style="@style/linear_horizontal">

            <ImageView
                android:id="@+id/image13"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image14"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image15"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image16"
                style="@style/image_sq"/>

        </LinearLayout>

        <LinearLayout

            style="@style/linear_horizontal">

            <ImageView
                android:id="@+id/image17"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image18"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image19"
                style="@style/image_sq"/>

            <ImageView
                android:id="@+id/image20"
                style="@style/image_sq"/>

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="5dp"
            style="@style/linear_hori2"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressbar1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:max="20"
                android:progress="0"
                android:indeterminate="false">
            </ProgressBar>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txtstyle_hori"
                    android:layout_weight="3"
                    android:text="Downloading "
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/img_loaded"
                    style="@style/txtstyle_hori"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textEnd"/>

                <TextView
                    style="@style/txtstyle_hori"
                    android:layout_weight="5"
                    android:text=" of 20 images"
                    android:textAlignment="textStart"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>